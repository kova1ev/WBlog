@page "{slug}"
@model ArticleModel
@{
    ViewData["Title"] = Model.Post?.Title;
    ViewData["TitleLine"] = Model.Post?.Title;
}

<div class="row py-5">
    <div class="content col-lg-9">
        <h2>@Model.Post?.Title</h2>
        <em>@Model.Post?.DateCreated</em>
        <br />
        <p> @Model.Post?.Content</p>
        <br />
        <hr>
        <div class="tags">
            @foreach (var tag in @Model.Post?.Tags ?? Enumerable.Empty<string>())
            {
                <a asp-page="Index" asp-route-tag="@tag" class="badge bg-success">@tag</a>
            }
        </div>
    </div>
    <!-- side artea-->
    <div class="side-area col-lg-3">
        <h4>Популярные теги</h4>
        @await Component.InvokeAsync("TagsCloud")
    </div>
</div>
