@page "/admin/Tags/TagsList"
@page "/admin/Tags"

<SideMenu></SideMenu>
<div class="col-lg-10">
    <h2>Теги</h2>

    <table class="table">
        <thead>
            <tr>
                <th class="col-11" scope="col">Название</th>
                <th class="col" scope="col">Дата</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TagsData?.Data ?? Enumerable.Empty<TagModel>())
            {
                <tr class="post">
                    <td> <a href="/admin/Tag/Edit">@item.Name</a> </td>
                    <td>43.32.4232</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Inject]
    public IBlogClient BlogClient { get; set; }

    public FiltredDataModel<TagModel>? TagsData { get; set; }



    protected async override Task OnInitializedAsync()
    {
        if (BlogClient != null)
        {
            TagsData = await BlogClient.GetAsync<FiltredDataModel<TagModel>>("api/tag");
        }
    }
}
